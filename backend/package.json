{
  "name": "gitcrypto_backend",
  "version": "1.0.0",
  "description": "Backend server application to implement crypto payments from Coinbase Wallet based on GitLab or GitHub error and/or feature implementation and acceptance.",
  "main": "dist/app.js",
  "scripts": {
    "start": "nodemon --exec ts-node src/app.ts",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'test/**/*.ts'",
    "startserver": "mongod --config /usr/local/etc/mongod.conf --fork",
    "mongo:status": "sudo systemctl status mongodb",
    "mongo:start": "sudo systemctl start mongodb",
    "mongo:stop": "sudo systemctl stop mongodb"
  },
  "author": "Karl Schmidt",
  "license": "ISC",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.2.14",
    "@types/cors": "^2.8.8",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.8",
    "@types/express-jwt": "0.0.42",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.2.0",
    "@types/mongoose": "^5.10.1",
    "@types/node-fetch": "^2.5.7",
    "@types/qs": "^6.9.5",
    "chai": "^4.2.0",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "apollo-server": "^2.19.0",
    "apollo-server-express": "^2.19.0",
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "graphql": "^15.4.0",
    "graphql-request": "^3.3.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.2",
    "mongoose": "^5.10.15",
    "node-fetch": "^2.6.1",
    "nodemon": "^2.0.6",
    "qs": "^6.9.4",
